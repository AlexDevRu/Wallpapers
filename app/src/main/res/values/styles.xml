<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="photoDetailToolbarTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="baseImageViewStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="roundedImage" parent="baseImageViewStyle">
        <item name="cornerSize">8%</item>
    </style>

    <style name="circleImage" parent="baseImageViewStyle">
        <item name="cornerSize">50%</item>
    </style>


    <style name="standardAuthorInfoStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="authorUsernameStyle" parent="standardAuthorInfoStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="twitterUsernameStyle" parent="standardAuthorInfoStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/twitter_username_color</item>
    </style>

    <style name="authorLinkStyle" parent="standardAuthorInfoStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="portfolioLinkStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="lineStyle">
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="authorDescription" parent="standardAuthorInfoStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="titleParameterStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dataParameterStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="circleImageButton">
        <item name="android:background">@drawable/circle_image_button_bg</item>
        <item name="android:elevation">@dimen/base_indent</item>
        <item name="android:padding">@dimen/base_indent</item>
    </style>

    <style name="photoDetailButtonContainerStyle">
        <item name="cardCornerRadius">@dimen/photo_detail_buttons_container_radius</item>
    </style>

    <style name="photoDetailLayoutStyle">
        <item name="android:paddingStart">@dimen/photo_detail_layout_padding_lr</item>
        <item name="android:paddingEnd">@dimen/photo_detail_layout_padding_lr</item>
        <item name="android:paddingTop">@dimen/photo_detail_layout_padding_tb</item>
        <item name="android:paddingBottom">@dimen/photo_detail_layout_padding_tb</item>
    </style>

    <style name="photoDetailButtonStyle">
        <item name="android:padding">@dimen/base_indent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="searchViewStyle">
        <item name="queryHint">@string/search_hint</item>
        <item name="closeIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/searchview_bg</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="errorMessagePhotoItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">@dimen/error_message_text_photo_item_size</item>
        <item name="android:padding">@dimen/base_indent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loadPhotoErrorTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="loadPhotoErrorButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="searchItemTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchItemInfoStyle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>