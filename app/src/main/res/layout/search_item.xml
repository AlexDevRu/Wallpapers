<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="kotlin.jvm.functions.Function0"/>
        <import type="kotlin.Unit"/>

        <variable
            name="viewModel"
            type="com.example.kulakov_p3_wallpapers_app.view_models.favorite.HistorySearchItemVM" />

        <variable
            name="delegate"
            type="com.example.kulakov_p3_wallpapers_app.adapters.SearchHistoryAdapter.Delegate" />
    </data>

    <androidx.cardview.widget.CardView
        android:onClick="@{() -> delegate.onItemClick()}"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/app_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/searchTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                tools:text="@{viewModel.searchQuery}"
                app:layout_constraintEnd_toStartOf="@+id/setFavoriteButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/searchInfo"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                tools:text="@{@string/search_info(viewModel.resultsCount, viewModel.searchDate)}"
                app:layout_constraintEnd_toStartOf="@+id/setFavoriteButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchTitle" />

            <ImageButton
                android:id="@+id/setFavoriteButton"
                android:onClick="@{() -> viewModel.updateFavoriteStatus()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_favorite_24"
                android:tint="@{viewModel.favorite ? @color/dark_blue : @color/gray}"
                android:contentDescription="@string/add_to_favorite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
